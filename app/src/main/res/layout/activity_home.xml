<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WELCOME TO MART"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#E91E63"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_anh" />

        <!-- Thống kê Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Thống kê"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#2196F3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageButton
                android:id="@+id/btnRevenue"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@android:drawable/ic_menu_agenda"
                android:contentDescription="Doanh thu"
                android:background="@android:color/transparent" />

            <ImageButton
                android:id="@+id/btnTopProducts"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@android:drawable/ic_menu_sort_by_size"
                android:contentDescription="Top sản phẩm"
                android:background="@android:color/transparent" />

            <ImageButton
                android:id="@+id/btnTopCustomers"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@android:drawable/ic_menu_myplaces"
                android:contentDescription="Top khách hàng"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <!-- Quản lý Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Quản lý"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#2196F3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageButton
                android:id="@+id/btnProducts"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@drawable/baseline_assignment_24"
                android:contentDescription="Sản phẩm"
                android:background="@android:color/transparent" />

            <ImageButton
                android:id="@+id/btnCustomers"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@drawable/baseline_emoji_people_24"
                android:contentDescription="Khách hàng"
                android:background="@android:color/transparent" />

            <ImageButton
                android:id="@+id/btnInvoices"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@drawable/outline_rubric_24"
                android:contentDescription="Hóa đơn"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:weightSum="3">


            <ImageButton
                android:id="@+id/btnChangePassword"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@drawable/outline_password_24"
                android:contentDescription="Đổi mật khẩu"
                android:background="@android:color/transparent" />

            <ImageButton
                android:id="@+id/btnLogout"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@drawable/outline_exit_to_app_24"
                android:contentDescription="Đăng xuất"
                android:background="@android:color/transparent" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>